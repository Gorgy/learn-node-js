<h1>{{title}}</h1>
<div id="cart">
  {{#if courses.length}}
  <table class="striped highlight responsive-table">

    <thead>
      <tr>
        <th>
          Название
        </th>
        <th>
          Кол-во
        </th>
        <th>
          Цена курса
        </th>
        <th>
          Действия
        </th>
      </tr>
    </thead>

    <tbody>
      {{#each courses}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td><span class="price">{{price}}</span></td>
        <td><button class="btn waves-effect waves-light red" data-remove-id="{{id}}">Удалить</button></td>
      </tr>
      {{/each}}
      <tr class="tr-price">
        <td colspan="2">Итого:</td>
        <td><span class="price">{{price}}</span></td>
        <td></td>
      </tr>
    </tbody>

  </table>

  <form action="/orders " method="POST">
    <button type="submit" class="btn waves-effect">Оформить заказ</button>
  </form>
  {{else}}
  <div class="card-panel red darken-1">Корзина пуста.</div>
  {{/if}}
</div>