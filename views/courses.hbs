<h1>{{title}}</h1>

{{#if courses.length}}
<div class="row">
  {{#each courses}}
  <div class="col m6 l4">
    <div class="card">
      <div class="card-image">
        <img src="{{img}}" alt="{{title}}">
      </div>
      <div class="card-content">
        <span class="card-title">{{title}}</span>
        <div class="price">{{price}}</div>
      </div>
      <div class="card-action d-flex align-items-center">
        <a href="/courses/{{id}}" target="_blank">Подробнее...</a>
        <a href="/courses/{{id}}/edit?allow=true">Редактировать</a>
        <form action="/cart/add" method="POST" class="ml-a">
          <input type="hidden" name="id" value="{{id}}" />
          <button class="btn btn-primary" type="submit">Купить</button>
        </form>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<div class="card-panel red darken-1">На данный моммент доступных курсов нет.</div>
{{/if}}