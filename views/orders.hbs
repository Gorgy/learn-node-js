<h1>{{title}}</h1>

{{#if orders.length}}
{{#each orders}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          Заказ <small>{{_id}}</small>
        </span>
        <p class="date">{{date}}</p>
        <p><em>{{user.userId.name}}</em> ({{user.userId.email}})</p>

        <ol>
          {{#each courses}}
          <li>{{course.title}} (&times;<strong>{{count}}</strong>)</li>
          {{/each}}
        </ol>

        <hr>

        <p>Цена: <span class="price">{{price}}</span></p>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<div class="card-panel red darken-1">Вы еще ничего не купили.</div>
{{/if}}